<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Autofocus Field</title>
    <style>
      body {
  margin: 0;
  padding: 0;
  height: 100vh;
}

.outer {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.container {
  background: #ffd2d2;

  display: flex;
  flex-flow: column;
  height: 80%;
  width: 80%;
  align-items: space-around;
  justify-content: center;
}

.mobile-img {
  width: 7%;
  height: 10%;
  margin: auto;
  margin-bottom: 0;
  margin-top: 0;
}

.heading-text {
  font-size: 2.5em;
  font-weight: bold;
  color: #000;
  text-align: center;
}

.subheading-text {
  color: #8e8e8e;
  text-align: center;
}

.userInput {
	margin-top: 5rem;
  display: flex;
  justify-content: center;
}

input {
  margin: 10px;
  height: 35px;
  width: 35px;
  border: none;
  border-radius: 5px;
  text-align: center;
  font-family: arimo;
  font-size: 1.2rem;
	border: #000;
	border-radius: 10%;
}



button {
  width: 300px;
  height: 40px;
  margin: 25px auto 0px auto;
  font-family: arimo;
  font-size: 0.9rem;
  border: none;
  border-radius: 5px;
  letter-spacing: 1px;
  cursor: pointer;
  color: #FFF;
  font-weight: 900;
  background: #FF0000
}
    </style>
  </head>
  <body>
    <div class="outer">
      <div class="container">
        <img class="mobile-img" src="img/mobile.png" alt="Email" />
        <h1 class="heading-text">Verification</h1>
        <p class="subheading-text">You will get an OTP via mail</p>
        <div class="userInput">
          <input
            type="text"
            id="ist"
            maxlength="1"
            onkeyup="clickEvent(this,'sec')"
          />
          <input
            type="text"
            id="sec"
            maxlength="1"
            onkeyup="clickEvent(this,'third')"
          />
          <input
            type="text"
            id="third"
            maxlength="1"
            onkeyup="clickEvent(this,'fourth')"
          />
          <input
            type="text"
            id="fourth"
            maxlength="1"
            onkeyup="clickEvent(this,'fifth')"
          />
          <input
            type="text"
            id="fifth"
            maxlength="1"
            onkeyup="clickEvent(this,'sixth')"
          />
          <input type="text" id="sixth" maxlength="1" />
        </div>
        <input type="text" name="otp">
        <button type="submit">SUBMIT</button>
      </div>
    </div>
    <script>
        function clickEvent(first,last){
			if(first.value.length){
				document.getElementById(last).focus();
			}
		}
    </script>
  </body>
</html>

