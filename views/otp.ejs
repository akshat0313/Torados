<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Autofocus Field</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
      }

      .outer {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #fff;
      }

      .container {
        background: #ffd2d2;

        display: flex;
        flex-flow: column;
        height: 80%;
        width: 80%;
        align-items: space-around;
        justify-content: center;
      }

      .mobile-img {
        width: 7%;
        height: 10%;
        margin: auto;
        margin-bottom: 0;
        margin-top: 0;
      }

      .heading-text {
        font-size: 2.5em;
        font-weight: bold;
        color: #000;
        text-align: center;
      }

      .subheading-text {
        color: #8e8e8e;
        text-align: center;
      }

      input {
        margin: 10px;
        height: 35px;
        width: 35px;
        border: none;
        border-radius: 5px;
        text-align: center;
        font-family: arimo;
        font-size: 1.2rem;
        border: #000;
        border-radius: 10%;
      }

      button {
        width: 300px;
        height: 40px;
        margin: 25px auto 0px auto;
        font-family: arimo;
        font-size: 0.9rem;
        border: none;
        border-radius: 5px;
        letter-spacing: 1px;
        cursor: pointer;
        color: #fff;
        font-weight: 900;
        background: #ff0000;
      }
    </style>
  </head>
  <body>
    <div class="outer">
      <div class="container">
        <svg class="mobile-img" width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <rect width="100" height="100" fill="url(#pattern0)"/>
          <defs>
          <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
          <use xlink:href="#image0_12_136" transform="scale(0.01)"/>
          </pattern>
          <image id="image0_12_136" width="100" height="100" xlink:href="data:image/png;base64,"/>
          </defs>
          </svg>
        <h1 class="heading-text">Verification</h1>
        <p class="subheading-text">You will get an OTP via mail</p>
        <form
          method="post" action="/verify"
          style="display: flex; justify-content: center; flex-direction: column"
        >
          <input
            type="text"
            name="otp"
            style="width: 300px; height: 40px; margin: 25px auto 0px auto"
          />
          <button type="submit">SUBMIT</button>
        </form>
      </div>
    </div>
  </body>
</html>
